# PostgreSQL版本环境变量配置

# 应用配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# PostgreSQL数据库配置
DATABASE_URL="postgresql://lndx_user:lndx_pass@localhost:5432/lndx_db?schema=public"

# 数据库连接池配置
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=60000

# JWT 配置
JWT_SECRET=lndx_super_secret_jwt_key_2025
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
BCRYPT_ROUNDS=12

# Redis配置（用于缓存和会话）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 短信配置 (阿里云短信)
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=学生管理系统
SMS_TEMPLATE_CODE=SMS_123456789

# 邮件配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@qq.com
SMTP_PASS=your_email_password

# 文件上传配置
UPLOAD_PATH=uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xlsx,xls

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=50m
LOG_MAX_FILES=30d

# 跨域配置
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# API限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 全文搜索配置（PostgreSQL内置）
SEARCH_LANGUAGE=simple  # 可选：simple, chinese, english
MIN_SEARCH_LENGTH=2

# 人脸识别服务配置
FACE_RECOGNITION_API_URL=http://localhost:5000
FACE_RECOGNITION_API_KEY=your_face_api_key

# 身份证识别服务配置
ID_CARD_RECOGNITION_API_URL=http://localhost:5001
ID_CARD_RECOGNITION_API_KEY=your_id_card_api_key

# Elasticsearch配置（可选，用于高级搜索）
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=lndx_search

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

