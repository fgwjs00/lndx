# 应用配置
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# 数据库配置
DATABASE_URL="mysql://root:password@localhost:3306/lndx_db"

# JWT 配置
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 加密配置
BCRYPT_ROUNDS=12

# 短信配置 (阿里云短信)
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret
SMS_SIGN_NAME=学生管理系统
SMS_TEMPLATE_CODE=SMS_123456789

# 邮件配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@qq.com
SMTP_PASS=your_email_password

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 文件上传配置
UPLOAD_PATH=uploads
UPLOAD_MAX_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# 日志配置
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# 跨域配置
CORS_ORIGIN=http://localhost:5173

# API限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 人脸识别服务配置
FACE_RECOGNITION_API_URL=http://localhost:5000
FACE_RECOGNITION_API_KEY=your_face_api_key

# 身份证识别服务配置
ID_CARD_RECOGNITION_API_URL=http://localhost:5001
ID_CARD_RECOGNITION_API_KEY=your_id_card_api_key

